{
	"name": "爱恋 kisssub 网站工具",
	"version": "1.0.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "popup/popup.html",
		"default_title": "鼠标悬浮时会显示我"
	},
	"author": "linhieng",
	"options_page": "options-page/options-page.html",
	"permissions": [
		"tabs",
		"storage"
	],
	"host_permissions": [
		"https://www.kisssub.org/",
		"http://www.kisssub.org/"
	],
	"content_scripts": [
		{
			"matches": [
				"https://www.kisssub.org/",
				"http://www.kisssub.org/"
			],
			"css": [
				"css/kisssub.css"
			],
			"js": [
				"content_scripts/kisssub-script.js"
			]
		},
		{
			"matches": [
				"https://www.kisssub.org/*"
			],
			"js": [
				"content_scripts/https-kisssub.js"
			]
		},
		{
			"matches": [
				"https://www.kisssub.org/addon.php?r=bangumi/table&layout=frame",
				"http://www.kisssub.org/addon.php?r=bangumi/table&layout=frame"
			],
			"css": [
				"css/kisssub.css"
			],
			"js": [
				"content_scripts/load-local-cartoon.js"
			]
		},
		{
			"matches": [
				"https://www.kisssub.org/addon.php*"
			],
			"css": [
				"css/toggle-width.css"
			],
			"js": [
				"content_scripts/toggle-width.js"
			]
		}
	]
}
