{
    "name": "零碎",
    "version": "1.0.0",
    "manifest_version": 3,
    "author": "linhieng",
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://www.colamanga.com/*",
        "https://www.twmanga.com/*",
        "https://www.rumanhua.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.colamanga.com/*"
            ],
            "css": [
                "colamanga.css"
            ]
        },
        {
            "matches": [
                "https://www.twmanga.com/*"
            ],
            "css": [
                "twmanga.css"
            ]
        },
        {
            "matches": [
                "https://www.rumanhua.com/*"
            ],
            "css": [
                "rumanhua.css"
            ]
        }
    ]
}